{
  "manifest_version": 3,
  "name": "Pure Anime",
  "version": "0.1.0",
  "description": "just have watch anime not the ads",
  "action": {
    "default_title": "Anime pure",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "topSites",
    "webNavigation"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
